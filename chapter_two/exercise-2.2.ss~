(define (make-point x y) (cons x y))
(define (x-point pnt) (car pnt))
(define (y-point pnt) (cdr pnt))

(define (make-segment start end) (cons start end))
(define (start-segment line) (car line))
(define (end-segment line) (cdr line))
(define (midpoint-segment line)
  (cons 
   (avg (x-point (start-segment line)) (x-point (end-segment line)))
   (avg (y-point (start-segment line)) (y-point (end-segment line)))))

(define (print-point p)
  (newline)
  (display "(")
  (display (x-point p))
  (display ",")
  (display (y-point p))
  (display ")"))
